<!-- views/machine.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/head %>
</head>
<body class="container">

<header>
    
</header>

<main>
    <div class="jumbotron">
        <h1><%= building + " " + machine.room_number + " " + machine.name %>
          <button type="button" class="btn btn-primary" onclick="myFunction()">Email to this specific machine</button>
          <p id="demo"></p>

        </h1>
        <p>CPU: <%= machine.CPU %></p>
        <p>RAM: <%= machine.RAM %></p>
        <p>OS: <%= machine.OS %></p>
        <p>Monitor: <%= machine.monitor %></p>
        <p>Printer: <%= machine.printer_id %></p>
        <p>Usage: <%= session %></p>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Machine</th>
            <th scope="col">CPU</th>
            <th scope="col">RAM</th>
            <th scope="col">OS</th>
            <th scope="col">Monitor</th>
            <th scope="col">Printer</th>
            <th scope="col">Usage</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row"><%= machine.name %></th>
            <td><%= machine.CPU %></td>
            <td><%= machine.RAM %></td>
            <td><%= machine.OS %></td>
            <td><%= machine.monitor %></td>
            <td><%= machine.printer_id %></td>
            <td><%= session %></td>

          </tr>

          
        </tbody>
      </table>

    </div>

</main>

<footer>
  <% include ./partials/footer %>
</footer>

<script>
function myFunction() {
  document.getElementById("demo").innerHTML = "Email button clicked";
}
</script>

</body>
</html>